<table class="table table-bordered">
	<thead>
		<tr>
			<th scope="col">ID</th>
    		<th scope="col">Section name</th>
    		<th scope="col">Student range</th>	
    		<th scope="col">total students</th>
    		<th scope="col">Show</th>
    		<th scope="col">Edit</th>	
    		<th scope="col">Delete</th>
  		</tr>
  	</thead>
  	<tbody>	

  	<% @sections.each do |section|%>
  		<tr>
    		<td><%= section.id %></td>	
    		<td ><%= section.name %></td>	
    		<td> 
          <% if section.student_range.present? && section.student_range <= 60 %>
            <%= section.student_range %>
            <% else %>
            <script>
              alert("Error: Student range must be less than or equal to 60.");
            </script>

            Maximum limit exceeded
            <% end %>
          </td>	
    		<td><%= section.students.count %></td>
    		<td class="actions">
    		<!-- <= link_to("Show", '/sections', :class => 'action show' ) %> -->
    		<%= link_to 'Show', section_path(section), class: 'btn btn-xs btn-primary ' %></td>
     		<td class="actions">	
     		<%= link_to("Edit", edit_section_path(section),:data => { confirm: "Are you sure you want to Edit this section?" }, class: 'btn btn-xs btn-info ') %>
    		  			</td>
    	  <td class="actions">
            <%= button_to 'Delete', section_path(section), method: :delete, data: { confirm: 'Are you sure you want to delete this section?' }, class: 'btn btn-danger', form: { class: 'd-inline' } %>
        </td>

  		</tr>
 	<% end %>
	</tbody>
</table>
