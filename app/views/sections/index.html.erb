<div class="  table-responsive-sm my-4 ">
<table class="table align-middle  border border-4  shadow p-3 mb-5 border-danger-subtle ">
	<thead class="table-dark ">
		<tr>
			<th scope="col" >ID</th>
    		<th scope="col">Sections </th>
    		<th scope="col">Students Range</th>
    		<th scope="col">Total students</th>
<!--			<th scope="col">students name</th>-->
			<th scope="col">Show</th>
    		<th scope="col">Edit</th>	
    		<th scope="col">Delete</th>
  		</tr>
  	</thead>
  	<tbody>	

  	<% @sections.each do |section|%>
  		<tr>
    		<td class="text-primary-emphasis"><%= section.id %></td>
    		<td ><%= section.name %></td>	
    		<td> 
          <% if section.student_range.present? && section.student_range <= 60 %>
            <%= section.students.name %>
            <% else %>
            <script>
              alert("Error: Student range must be less than or equal to 60.");
            </script>

            Maximum limit exceeded
            <% end %>
				</td>
    		<td><%= section.students.count %></td>

<!--				<td>-->
					<%# section.students.each do |student| %>
<!--						ID: <%#= section.id %>, Name: <%#= student.name %><br>-->
<!--						<div class=" border-bottom border-danger-subtle">-->
<!--						<%#= section.id %>,<%#= student.name %>-->
<!--						</div>-->
					<%# end %>
<!--				</td>-->
				<!-- index -->
				<td class="action">
					<!-- <= link_to("Show", '/students', :class => 'action show' ) %> -->
					<%= link_to(section_path(section), class: "btn btn-outline-success") do %>
						<i class="bi bi-eye-fill"></i>
					<% end %>
					<td class="action">
						<%#= link_to("Edit", edit_student_path(student),:data => { confirm: "Are you sure you want to Edit this student?" }, class: "btn btn btn-outline-info bi bi-pencil"  ) %>
						<%= link_to(edit_section_path(section), data: { confirm: "Are you sure you want to Edit this student?" }, class: "btn btn-outline-primary") do %>
							<i class="bi bi-pencil-fill "></i>
						<%end%>
					</td>
					<td class="action">
						<%#= button_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure you want to delete this student?' }, class: 'btn btn btn-outline-danger', form: { class: 'd-inline' } %>
						<%= button_to section_path(section), method: :delete, data: { confirm: 'Are you sure you want to delete this student?' }, class: 'btn btn-outline-danger d-inline' do %>
							<i class="bi bi-trash-fill"></i>
						<% end %>
					</td>
  		</tr>
 	<% end %>
	</tbody>
</table>
</div>
