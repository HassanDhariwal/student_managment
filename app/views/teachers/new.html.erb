<h1>New Teachers</h1>
<div class="form-container">
<%= form_with :url => teachers_path, :method => 'post', local: true do |f| %>
    
<div class="col-md-4"> 
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true, class: 'form-control' %>
</div>

<div class="col-md-4">
    <%= f.label :phone_number,'Phone Number', class: 'control-label' %><br>
    <%= f.text_field :phone_number, pattern: '[0-9]{11}', maxlength: 12, placeholder: 'xxxx-xxxxxx', class: 'form-control' %>
</div>

<div class="col-md-4">
	<%= f.label :email %><br>
    <%= f.email_field :email, class: "form-control" %>

</div>

<div class="col-md-4">
    <%= f.label :gender %><br>
    <%= f.select :gender, options_for_select(['Male', 'Female']), prompt: 'Select Gender', class: "form-control"%>
</div>

<div class="col-md-4">
    <%= f.label :date_of_birth %><br>
    <%= f.date_field :date_of_birth , placeholder: 'day-month-year', class: "form-control" %>
</div>

<div class="col-md-4">
    <%= f.label :address %><br>
    <%= f.text_field :address , class: 'form-control' %>
</div>

<div class="col-md-4">
  <%= f.label :qualification %><br>
  <%= f.select :qualification, options_for_select([ 'Matriculation',
    'Intermediate',
    'Bachelor\'s Degree',
    'Master\'s Degree',
    'Doctorate',
    'Diploma',
    'Professional Degree'], selected: nil), prompt: 'Select Qualification', class: 'form-control' %>
</div>

<div class="col-md-4">
    <%= f.label :subject %><br>
    <%= f.text_field :subject, placeholder: "Teach Subject", class: 'form-control' ,maxlength: 10 %>
</div>
<br>
<div class="form-button">
    <%= f.submit ('create teacher') , class: "btn btn-outline-success" %> |
    <%= link_to 'BACK TO LIST',teachers_path, class: "btn btn-outline-primary" %>
</div>

<% end %>


</div>

