<table class="table table-bordered">

	<thead>
		<tr>
  			<th>ID</th>
    		<th>Name</th>
   			<th>Age</th>
    		<th>Father_name</th>
   			<th>Phone_number</th>
    		<th>Email</th>
        <th>Guardian_no</th>
        <th>date_of_birth</th>
        <th>Gender</th>
    		<th>Blood_group</th>
    		<th>Section id</th>
    		<th>Show</th>	
   			<th>Edit</th>
    		<th>Delete</th>
  		</tr>
  	</thead>
  	<tbody>	
  		<% @students.each do |student|%>
  			<tr>
  				<td><%= student.id %></td>  
    			<td><%= student.name %></td>
    			<td><% if student.age <= 60 %>
            <%= student.age %>
            <% else %>
            <script>
              alert("Error: Student range must be less than or equal to 60.");
            </script>
            Maximum limit exceeded
            <% end %>
          </td>
    			<td><%= student.father_name %></td>
    			<td>
            <% if student.phone_number.present? %>
              <% student_phone_number = "#{student.phone_number[0..3]}- #{student.phone_number[4..10]}" %>
              <%= student_phone_number %>
             <% else %>
              No phone number provided
            <% end %>
          </td>
   				<td><%= student.email %></td>
          <td><%= student.guardian_no %></td>
          <td><%= student.date_of_birth&.strftime('%m-%d-%Y') %></td>
          <td><%= student.gender %></td> 
    			<td><% if /(A\+|A\-|B\+|B\-|AB\+|AB\-|O\+|O\-)/.match?(student.blood_group) %>
            <%= student.blood_group %>
            <% else %>
            <script>
              alert("enter a correct blood group like A+")
            </script>
            invalid blood group
            <% end %> 
            </td>
    			<td><%= student.section&.name %></td>

    			<td class="actions">
    			<!-- <= link_to("Show", '/students', :class => 'action show' ) %> -->
    			<%= link_to 'Show', student_path(student), class:"btn btn-xs btn-primary"  %></td>
    			<td class="actions">	
    				<%= link_to("Edit", edit_student_path(student),:data => { confirm: "Are you sure you want to Edit this student?" },class:"btn btn-xs btn-info"  ) %>
    			</td>
    			
          <td class="actions">
            <%= button_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure you want to delete this student?' }, class: 'btn btn-xs btn-danger', form: { class: 'd-inline' } %>
          </td>
  			</tr>
  	<% end %>
	</tbody>
</table>
