<div class="students index">
    <!-- <= link_to("Create a recode", '/students/new', :class => 'action edit' ) %> -->
    <%= link_to("Create a recode", new_student_path, :class => 'action edit' ) %>
<table class="table">
	<thead>
		<tr>
  			<th>ID</th>
    		<th>Name</th>
   			<th>Age</th>
    		<th>Father_name</th>
   			<th>Phone_number</th>
    		<th>Email</th>
    		<th>Blood_group</th>
    		<th>Show</th>	
   			<th>Edit</th>
    		<th>Delete</th>
  		</tr>
  	</thead>
  	<tbody>	
  	<% @students.each do |student|%>
  		<tr>
  			<td><%= student.id %></td>
    		<td><%= student.name %></td>
    		<td><%= student.age %></td>
    		<td><%= student.father_name %></td>
    		<td><%= student.phone_number %></td>	
   			<td><%= student.email %></td>
    		<td><%= student.blood_group %></td>
    		<td class="actions">
    		<!-- <= link_to("Show", '/students', :class => 'action show' ) %> -->
    		<td><%= link_to 'Show', student_path(student), :class => 'action show' %></td>
    		</td>
    		<td class="actions">	
    			<%= link_to("Edit", edit_student_path(student),:data => { confirm: "Are you sure you want to Edit this student?" }, :class => 'action edit' ) %>
    		</td>
    		<td class="actions">	
    			<%= link_to("Delete", student_path(student),:method => :delete,:data => { confirm: "Are you sure you want to delete this student?" },
    			 :class => 'action delete' ) %>
    		</td>
  		</tr>
  	<% end %>
	</tbody>
</table>
</div>