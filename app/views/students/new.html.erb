
<%= form_with :url => students_path, :method => 'post', local: true do |f| %>


   <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>  
  <p>
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </p>
  <p>
    <%= f.label :father_name %><br>
    <%= f.text_field :father_name %>
  </p>
  <p>
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :blood_group %><br>
    <%= f.text_field :blood_group %>
  </p>
  <p>
    <%= f.label :section_name %><br>
    <%= f.select :section_id, options_for_select(Section.all.map { |s| [s.name, s.id] }) %>
  </p>
  
  <div class="form-button">
    <%= f.submit ('create student') %>
  </div>
<% end %>
<br>
  <button class="btn btn-primary" onclick="location.href='<%= students_path %>'" role="button"> Back to list </button>
