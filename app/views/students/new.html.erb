<div class="form-container-fluid">
<%= form_with :url => students_path, :method => 'post', local: true do |f| %>


   <div class="col-md-4"> 
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true, class: 'form-control',placeholder:"Enter a Name" %>
  </div>  
  <div class="col-md-4">
    <%= f.label :age %><br>
    <%= f.number_field :age, in: 1...61, required: true, class: 'form-control',placeholder:"Enter a Age" %>

  </div>
  <div class="col-md-4">
    <%= f.label :father_name %><br>
    <%= f.text_field :father_name, class: 'form-control',placeholder: "Enter a father_name" %>
  </div>
  <div class="col-md-4">
    <%= f.label :phone_number,'Phone Number', class: 'control-label' %><br>
    <%= f.text_field :phone_number, pattern: '[0-9]{11}', maxlength: 11, placeholder: 'xxxx-xxxxxx', class: 'form-control' %>
  </div>
  <div class="col-md-4">
    <%= f.label :email %><br>
    <%= f.email_field :email ,placeholder: "Enter a Email
    ", class: "form-control" %>
  </div>
  <div class="col-md-4">
    <%= f.label :guardian_number %><br>
    <%= f.telephone_field :guardian_no, pattern: '[0-9]{11}', maxlength: 11, placeholder:"xxxx-xxxxxxx", class: 'form-control' %>
  </div>
  <div class="col-md-4">
    <%= f.label :date_of_birth %><br>
    <%= f.date_field :date_of_birth, order: [:day, :month, :year], start_year: Date.today.year - 100, end_year: Date.today.year, class:"form-control" %>
  </div>
  <div class="col-md-4">
    <%= f.label :gender %><br>
    <%= f.select :gender, options_for_select(['Male', 'Female']), prompt: 'Select Gender', class:"form-control"%>
  </div>
  <div class="col-md-4">
    <%= f.label :blood_group %><br>
    <%= f.select :blood_group, options_for_select(['A+', 'A-', 'B+', 'B-', 'AB+', 'AB-', 'O+', 'O-']), prompt: 'Select blood group', class: "form-control"%>
  </div>
  <div class="col-md-4">
    <%= f.label :section_name %><br>
    <%= f.select :section_id, options_for_select(Section.all.map { |s| [s.name, s.id] }),prompt: 'Select section_name', class: "form-control" %>
  </div>
  <br>  
  <div class="form-button">
    <%= f.submit ('create student'),class: "btn btn btn-outline-success" %>
    |
    <%= link_to 'BACK TO LIST',students_path, class: "btn btn-outline-primary" %>
  </div>
<% end %>
<br>
  <!-- 1st <button class="btn btn-primary" onclick="location.href='<=
   students_path %>'" role="button"> Back to list </button> -->
<!-- 2nd <= link_to("Back to list", '/students/index', :class => 'back link' ) %> -->
</div>
