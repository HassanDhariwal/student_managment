
<div class="students Edit">
<h2>Update Student</h2>


<!-- <= form_with url: "/students/:id/edit", method: :post do |f| %>  -->
<!-- <= form_with url: student_path(@student), :method => 'patch' do |f| %> -->
  <%= form_with(model: @student,url: student_path(@student), :method => 'patch', local: true) do |f| %>
   <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>  
  <p>
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </p>
  <p>
    <%= f.label :father_name %><br>
    <%= f.text_field :father_name %>
  </p>
  <p>
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :blood_group %><br>
    <%= f.text_field :blood_group %>
  </p>
  <p>
    <%= f.submit ('update student') %>
  </p>
<% end %>

</div><%= link_to("Back to list", '/students/index', :class => 'back link' ) %>
